{
  "name": "crypto-node",
  "version": "0.4.0",
  "description": "rust-crypto nodejs bindings",
  "main": "index.node",
  "author": "LongYinan <lynweklm@gmail.com>",
  "license": "MIT",
  "types": "index.d.ts",
  "dependencies": {
    "@google-cloud/storage": "^2.3.4",
    "neon-cli": "^0.2",
    "request": "^2.88.0",
    "semver": "^5.6.0"
  },
  "scripts": {
    "build": "cargo build --release && node ./copy-binary.js",
    "build-debug": "cargo build && node ./copy-binary.js",
    "configure-debug": "node-gyp configure --verbose --debug",
    "configure-release": "node-gyp configure --verbose",
    "gyp-build-release": "node-gyp build",
    "gyp-build-debug": "node-gyp build --debug",
    "install": "node tools/download.js"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nan": "^2.12.1",
    "node-gyp": "^3.8.0",
    "prettier": "^1.15.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cargo +nightly fmt -- --check && lint-staged"
    }
  }
}
